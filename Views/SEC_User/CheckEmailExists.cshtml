@{
}

@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="session">
    <div class="left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 302.5" version="1.1">
            <style type="text/css">
                .st01 {
                    fill: #fff;
                }</style>
            <path class="st01" d="m126 302.2..."></path>
        </svg>
    </div>

    <form method="post" asp-action="CheckEmailExistsPost" asp-controller="SEC_User" class="log-in" autocomplete="off">
        <h4>We are <span>Expense Management</span></h4>
        <p>Verify Your Email for Password Recovery</p>

        @if (TempData["ErrorMSG"] != null)
        {
            <div style="padding: 15px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 4px; color: #721c24; background-color: #f8d7da;">
                @TempData["ErrorMSG"]
            </div>
        }

        <div class="floating-label">
            <input type="text" placeholder="Email" name="Email" id="email" autocomplete="off" />
            <label for="Email">Email:</label>
            <div class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" version="1.1">
                    <g transform="translate(0 -952.36)">
                        <path d="m17.5 977c-1.3 0-2.4 1.1-2.4 2.4v45.9c0 1.3 1.1 2.4 2.4 2.4h64.9c1.3 0 2.4-1.1 2.4-2.4v-45.9c0-1.3-1.1-2.4-2.4-2.4h-64.9zm2.4 4.8h60.2v1.2l-30.1 22-30.1-22v-1.2zm0 7l28.7 21c0.8 0.6 2 0.6 2.8 0l28.7-21v34.1h-60.2v-34.1z" />
                    </g>
                </svg>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Verify</button>

        <a asp-action="Index" asp-controller="SEC_User" class="discrete">Already have an account? <span style="color: #007bff;">Log in</span></a>
        <a asp-action="Register" asp-controller="SEC_User" class="discrete">Don't have an account? <span style="color: #007bff;">Sign up</span></a>
        
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
