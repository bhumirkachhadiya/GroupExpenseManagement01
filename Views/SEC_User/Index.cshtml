@model SEC_UserModel;
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="session">
    <div class="left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 302.5" version="1.1">
            <style type="text/css">
                .st01 {
                    fill: #fff;
                }</style>
            <path class="st01" d="m126 302.2..."></path>
        </svg>
    </div>
    <form method="post" asp-action="Login" asp-controller="SEC_User" class="log-in" autocomplete="off">
        <h4>We are <span>Expense Management</span></h4>
        <p>Welcome back! Log in to your account to view today's clients:</p>
        @if (TempData["Error"] != null)
        {
            <div style="padding: 15px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 4px; color: #721c24; background-color: #f8d7da;">@TempData["Error"]</div>
        }
        @if (TempData["ErrorMSG"] != null)
        {
            <div style="padding: 15px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 4px; color: #721c24; background-color: #f8d7da;">
                @TempData["ErrorMSG"]
            </div>
        }
        @if (TempData["UpdateMSG"] != null)
        {
            <div style="padding: 15px; margin-bottom: 20px; border: 1px solid #c3e6cb; border-radius: 4px; color: #155724; background-color: #d4edda;">
                @TempData["UpdateMSG"]
            </div>
        }
        <div class="floating-label">
            <input placeholder="Email" asp-for="UserName" id="email" autocomplete="off" />
            <label for="UserName">Email:</label>
            <div class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" version="1.1">
                    <g transform="translate(0 -952.36)">
                        <path d="m17.5 977c-1.3 0-2.4 1.1-2.4 2.4v45.9c0 1.3 1.1 2.4 2.4 2.4h64.9c1.3 0 2.4-1.1 2.4-2.4v-45.9c0-1.3-1.1-2.4-2.4-2.4h-64.9zm2.4 4.8h60.2v1.2l-30.1 22-30.1-22v-1.2zm0 7l28.7 21c0.8 0.6 2 0.6 2.8 0l28.7-21v34.1h-60.2v-34.1z" />
                    </g>
                </svg>
            </div>
        </div>
        <div class="floating-label">
            <input type="password" placeholder="Password" asp-for="Password" id="password" autocomplete="off" />
            <label for="Password">Password:</label>
            <div class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" version="1.1">
                    <path d="M19,21H5V9h14V21z M6,20h12V10H6V20z" />
                    <path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z" />
                    <path d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5z" />
                </svg>
            </div>
        </div>
        <div class="floating-label" style="margin: 29px 0 6px 10px">
            <input type="checkbox" asp-for="RememberMe" id="rememberMe" class="custom-checkbox">
            <label for="rememberMe" class="checkbox-label">Remember Me</label>
        </div>
        <div style="margin:0 auto 0 auto">
            <button type="submit">Log in</button>
        </div>
        <a asp-action="Register" asp-controller="SEC_User" class="discrete">Don't have an account? <span style="color: #007bff;">Sign up</span></a>
        <a asp-action="CheckEmailExists" asp-controller="SEC_User" style="color: #007bff;" class="discrete"><b>Forgot password?</b></a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        /* Reset checkbox appearance */
        input[type="checkbox"].custom-checkbox {
            display: none;
        }

        /* Create a custom checkbox */
        .checkbox-label {
            position: relative;
            padding-left: 35px;
            cursor: pointer;
            font-size: 16px;
            user-select: none;
        }

            .checkbox-label:before {
                content: "";
                position: absolute;
                left: 0;
                top: 0;
                width: 20px;
                height: 20px;
                background-color: #f1f1f1;
                border: 2px solid #ccc;
                border-radius: 4px;
            }

        /* Style the checkmark */
        input[type="checkbox"].custom-checkbox:checked + .checkbox-label:before {
            background-color: #4caf50;
            border-color: #4caf50;
        }

        /* Add the checkmark symbol */
        .checkbox-label:after {
            content: "";
            position: absolute;
            left: 6px;
            top: 2px;
            width: 7px;
            height: 12px;
            border: solid white;
            border-width: 0 3px 3px 0;
            transform: rotate(45deg);
            opacity: 0;
        }

        /* Show the checkmark when the checkbox is checked */
        input[type="checkbox"].custom-checkbox:checked + .checkbox-label:after {
            opacity: 1;
        }

    </style>
}