            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" asp-controller="Group" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".user-item").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}

@section Styles {

    <style>
        .scrollable-checkbox-list {
            max-height: 150px; /* Adjust height as needed to fit approximately 5 items */
            overflow-y: auto;
            border: 1px solid #ddd; /* Optional: Add a border for better visual separation */
            padding: 10px; /* Optional: Add padding for better spacing */
            border-radius: 4px; /* Optional: Add rounded corners */
        }
    </style>
